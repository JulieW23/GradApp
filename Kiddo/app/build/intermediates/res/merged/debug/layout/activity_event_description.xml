<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_event_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorAccent"
    tools:context="com.team_05.kiddo.EventDescriptionActivity">

    <TextView
        android:text="Sat Nov 12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/headerHeight"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/dateTextView"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/headerFontSize"
        android:fontFamily="@string/headerFont"
        android:gravity="center"
        android:textAlignment="center"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/backImageButton"
        android:background="@color/colorPrimary"
        android:tint="@color/colorAccent"
        android:layout_alignTop="@+id/dateTextView"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"/>

    <Button
        android:text="Delete"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:id="@+id/deleteButton" />

    <TextView
        android:text="Picnic"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/dateTextView"
        android:layout_alignLeft="@+id/deleteButton"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/eventTitleTextView"/>

    <TextView
        android:text="The picnic is for both children and parents. Please bring food if possible."
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventTitleTextView"
        android:layout_alignLeft="@+id/eventTitleTextView"
        android:layout_alignStart="@+id/eventTitleTextView"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="15dp"
        android:id="@+id/descriptionTextView"/>

    <TextView
        android:text="Time: 12:00 PM"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionTextView"
        android:layout_alignLeft="@+id/descriptionTextView"
        android:layout_alignStart="@+id/descriptionTextView"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="15dp"
        android:id="@+id/timeTextView" />

    <TextView
        android:text="Location: Fort Hope"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeTextView"
        android:layout_alignLeft="@+id/descriptionTextView"
        android:layout_alignStart="@+id/descriptionTextView"
        android:layout_marginTop="15dp"
        android:id="@+id/locationTextView"
        android:textColor="@color/colorPrimaryDark"/>

    <ImageView
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonWidth"
        app:srcCompat="@drawable/maplocationexample"
        android:id="@+id/locationImageView"
        android:layout_below="@+id/locationTextView"
        android:layout_alignLeft="@+id/locationTextView"
        android:layout_alignStart="@+id/locationTextView" />

</RelativeLayout>

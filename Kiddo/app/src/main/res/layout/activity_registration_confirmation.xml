<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registration_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.team_05.kiddo.RegistrationConfirmationActivity">

    <TextView
        android:text="Confirmation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/headerHeight"
        android:id="@+id/confirmationTextView"
        android:background="@color/colorGreen"
        android:fontFamily="@string/headerFont"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/headerFontSize"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        android:id="@+id/backImageButton"
        android:backgroundTint="@color/colorGreen"
        android:layout_alignBottom="@+id/settingsTextView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:tint="@color/colorAccent" />

    <TextView
        android:text="@string/confirmation1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmationTextView1"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12dp"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_below="@+id/backImageButton"
        android:layout_alignLeft="@+id/backImageButton"
        android:layout_alignStart="@+id/backImageButton" />

    <TextView
        android:text="@string/confirmation_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmationLoginTextView"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12dp"
        android:layout_below="@+id/confirmationTextView1"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@+id/confirmationTextView1"
        android:layout_alignStart="@+id/confirmationTextView1" />

    <TextView
        android:text="@string/change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmationTextView2"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12dp"
        android:layout_below="@+id/confirmationLoginTextView"
        android:layout_marginTop="1dp"
        android:layout_alignLeft="@+id/confirmationLoginTextView"
        android:layout_alignStart="@+id/confirmationLoginTextView" />

    <TextView
        android:text="@string/confirmation_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmationInfoTextView"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12dp"
        android:layout_below="@+id/confirmationTextView2"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@+id/confirmationTextView2"
        android:layout_alignStart="@+id/confirmationTextView2" />

    <TextView
        android:text="@string/confirmation_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmationDoneTextView"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12dp"
        android:layout_below="@+id/confirmationInfoTextView"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@+id/confirmationInfoTextView"
        android:layout_alignStart="@+id/confirmationInfoTextView" />

    <Button
        android:text="Done"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:id="@+id/doneButton"
        android:background="@color/colorGreen"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="90dp"
        android:layout_alignTop="@+id/confirmationDoneTextView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

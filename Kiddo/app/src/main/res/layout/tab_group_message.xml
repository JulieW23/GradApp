<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTabHost">

    <ListView
        android:id="@+id/groupMessageListView"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent"></ListView>

    <Button
        android:text="Create Message"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:id="@+id/createMessageButton"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_playlist_add_check_black_24dp"
        android:layout_alignTop="@+id/createMessageButton"
        android:layout_alignBottom="@+id/createMessageButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:id="@+id/checkAllImageButton"
        android:background="@color/colorPrimary"
        android:tint="@color/colorAccent"/>

</RelativeLayout>
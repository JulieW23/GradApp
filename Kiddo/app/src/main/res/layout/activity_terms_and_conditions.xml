<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_terms_and_conditions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.team_05.kiddo.TermsAndConditionsActivity">

    <TextView
        android:text="Terms and Conditions"
        android:layout_width="match_parent"
        android:layout_height="@dimen/headerHeight"
        android:id="@+id/termsAndConditionsTextView"
        android:background="@color/colorGreen"
        android:fontFamily="@string/headerFont"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/headerFontSize"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        android:id="@+id/backImageButton"
        android:backgroundTint="@color/colorGreen"
        android:layout_alignBottom="@+id/settingsTextView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:tint="@color/colorAccent" />

    <ScrollView
        android:layout_width="340dp"
        android:layout_height="390dp"
        android:layout_below="@+id/backImageButton"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/scrollView2">
        <TextView
            android:text="@string/terms_and_conditions"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:id="@+id/tAndCTextView"
            android:textSize="12dp"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/backImageButton"
            android:layout_centerHorizontal="true" />
    </ScrollView>

    <Button
        android:text="Accept"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:id="@+id/acceptButton"
        android:background="@color/colorGreen"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/scrollView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Decline"
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:id="@+id/declineButton"
        android:background="@color/colorGreen"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/acceptButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

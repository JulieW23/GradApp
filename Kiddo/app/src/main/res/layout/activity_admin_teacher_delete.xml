<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_teacher_delete"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.team_05.kiddo.AdminTeacherDelete">

    <TextView
        android:text="Teacher Deleted"
        android:layout_width="match_parent"
        android:layout_height="@dimen/headerHeight"
        android:id="@+id/adTeachersTextView"
        android:background="@color/colorRed"
        android:fontFamily="@string/headerFont"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/headerFontSize"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Teachers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teacherButton"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"

        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Main Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menuButton"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"

        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The teacher account associated with Jenny Abrams has been successfully deleted."
        android:ems="10"
        android:layout_marginTop="87dp"
        android:id="@+id/editText"
        android:textSize="18sp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_below="@+id/adTeachersTextView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_enrolment_request"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorAccent"
    tools:context="com.team_05.kiddo.EnrolmentRequestActivity">

    <TextView
        android:text="Enrolment Request"
        android:layout_width="match_parent"
        android:layout_height="@dimen/headerHeight"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/enrolmentRequestTextView"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/headerFontSize"
        android:gravity="center"
        android:textAlignment="center"
        android:fontFamily="@string/headerFont"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/backImageButton"
        android:background="@color/colorPrimary"
        android:tint="@color/colorAccent"
        android:layout_alignTop="@+id/enrolmentRequestTextView"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"/>

    <Button
        android:text="Deny"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:id="@+id/denyButton"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Accept"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:id="@+id/acceptButton"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:layout_above="@+id/denyButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:text="Parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enrolmentRequestTextView"
        android:layout_alignLeft="@id/acceptButton"
        android:layout_marginTop="25dp"
        android:id="@+id/parentTextView"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:text="Reginald"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parentTextView"
        android:layout_alignLeft="@+id/parentTextView"
        android:layout_alignStart="@+id/parentTextView"
        android:id="@+id/parentFirstNameTextView"
        android:textSize="@dimen/normalTextSize"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:text="Rhodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parentFirstNameTextView"
        android:layout_alignLeft="@+id/parentFirstNameTextView"
        android:layout_alignStart="@+id/parentFirstNameTextView"
        android:id="@+id/parentLastNameTextView"
        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/normalTextSize"/>

    <TextView
        android:text="Child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailTextView"
        android:layout_alignLeft="@id/parentLastNameTextView"
        android:layout_marginTop="25dp"
        android:id="@+id/childTextView"
        android:textSize="20dp"
        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:text="Daniel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/childTextView"
        android:layout_alignLeft="@+id/childTextView"
        android:layout_alignStart="@+id/childTextView"
        android:id="@+id/childFirstNameTextView"
        android:background="@color/colorAccent"
        android:textSize="@dimen/normalTextSize"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:text="Rhodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/childFirstNameTextView"
        android:layout_alignLeft="@+id/childFirstNameTextView"
        android:layout_alignStart="@+id/childFirstNameTextView"
        android:id="@+id/childLastNameTextView"
        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/normalTextSize"
        />

    <TextView
        android:text="E-mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parentLastNameTextView"
        android:layout_alignLeft="@+id/parentLastNameTextView"
        android:layout_alignStart="@+id/parentLastNameTextView"
        android:id="@+id/emailHeaderTextView"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:text="reginaldrhodes@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailHeaderTextView"
        android:layout_alignLeft="@+id/emailHeaderTextView"
        android:layout_alignStart="@+id/emailHeaderTextView"
        android:id="@+id/emailTextView"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/normalTextSize"/>

    <TextView
        android:text="Student Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/studentNumberHeaderTextView"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/childLastNameTextView"
        android:layout_alignLeft="@+id/parentTextView"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"/>

    <TextView
        android:text="1001234567"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentNumberHeaderTextView"
        android:layout_alignLeft="@+id/studentNumberHeaderTextView"
        android:layout_alignStart="@+id/studentNumberHeaderTextView"
        android:id="@+id/studentNumberTextView"
        android:textSize="@dimen/normalTextSize"
        android:textColor="@color/colorPrimaryDark"/>

</RelativeLayout>

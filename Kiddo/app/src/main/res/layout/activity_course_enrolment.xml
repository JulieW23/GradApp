<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_course_enrolment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.team_05.kiddo.CourseEnrolmentActivity">

    <TextView
        android:text="Course Enrolment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/headerHeight"
        android:id="@+id/childEnrolTextView"
        android:background="@color/colorGreen"
        android:fontFamily="@string/headerFont"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/headerFontSize"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        android:id="@+id/backImageButton"
        android:backgroundTint="@color/colorGreen"
        android:layout_alignBottom="@+id/settingsTextView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:tint="@color/colorAccent" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/ic_playlist_add_check_black_24dp"
        android:id="@+id/checkAllImageButton"
        android:background="@color/colorPrimaryDark"
        android:tint="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

    <Button
        android:text="Done"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:id="@+id/doneButton"
        android:background="@color/colorGreen"
        android:textColor="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/classEnrolListView"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:choiceMode="multipleChoice"
        android:background="@color/colorAccent"
        android:layout_alignTop="@id/childEnrolTextView"
        android:layout_marginTop="50dp"
        android:layout_alignBottom="@id/doneButton"
        android:layout_marginBottom="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </ListView>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_teacher_initial_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorAccent"
    tools:context="com.team_05.kiddo.TeacherInitialLoginActivity">

    <TextView
        android:text="Enter a new password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:id="@+id/newPasswordTextView"
        android:textSize="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@string/textFieldFont"/>

    <EditText
        android:layout_width="@dimen/textFieldWidth"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/passwordTextField1"
        android:hint="Password"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@string/textFieldFont"
        android:background="@android:color/transparent"/>

    <EditText
        android:layout_width="@dimen/textFieldWidth"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/passwordTextField1"
        android:layout_alignRight="@+id/passwordTextField1"
        android:layout_alignEnd="@+id/passwordTextField1"
        android:id="@+id/passwordTextField2"
        android:hint="Confirm password"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@string/textFieldFont"
        android:layout_marginTop="@dimen/spaceBetweenTextFields"
        android:background="@android:color/transparent"/>

    <Button
        android:text="Done"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordTextField2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:id="@+id/doneButton"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="@dimen/marginFromBottom" />

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="@dimen/headerHeight"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/newPasswordHeaderTextView"
        android:background="@color/colorPrimary" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.team_05.kiddo.AdminMainMenu">

    <Button
        android:text="Manage Classes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manageClassesButton"
        android:background="@color/colorGreen"
        android:textColor="@color/colorWhite"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/manageTeachersButton"
        android:layout_alignStart="@+id/manageTeachersButton"
        android:layout_alignRight="@+id/manageTeachersButton"
        android:layout_alignEnd="@+id/manageTeachersButton" />

    <TextView
        android:text="Main Menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/headerHeight"
        android:id="@+id/menuTextView"
        android:background="@color/colorRed"
        android:fontFamily="@string/headerFont"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/headerFontSize"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Update Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/updateAdminButton"
        android:background="@color/colorGrey"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/manageClassesButton"
        android:layout_alignLeft="@+id/manageClassesButton"
        android:layout_alignStart="@+id/manageClassesButton"
        android:layout_marginTop="27dp"
        android:layout_alignRight="@+id/manageClassesButton"
        android:layout_alignEnd="@+id/manageClassesButton" />

    <Button
        android:text="Manage Teachers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manageTeachersButton"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="26dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_above="@+id/manageClassesButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

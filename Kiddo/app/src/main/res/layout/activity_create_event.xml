<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorAccent"
    tools:context="com.team_05.kiddo.CreateEventActivity">

    <TextView
        android:text="Create Event"
        android:layout_width="match_parent"
        android:layout_height="@dimen/headerHeight"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/createEventTextView"
        android:background="@color/colorPrimary"
        android:fontFamily="@string/headerFont"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/headerFontSize"
        android:textAlignment="center"
        android:gravity="center"/>

    <Button
        android:text="Create"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/createButton"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/backImageButton"
        android:background="@color/colorPrimary"
        android:tint="@color/colorAccent"
        android:layout_alignTop="@+id/createEventTextView"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"/>

    <EditText
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:layout_below="@+id/createEventTextView"
        android:layout_alignLeft="@+id/createButton"
        android:layout_alignStart="@+id/createButton"
        android:layout_marginTop="25dp"
        android:id="@+id/eventTitleTextField"
        android:textColor="@color/colorPrimaryDark"
        android:hint="Event Title"/>

    <EditText
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:layout_below="@+id/eventTitleTextField"
        android:layout_alignLeft="@+id/eventTitleTextField"
        android:layout_alignStart="@+id/eventTitleTextField"
        android:id="@+id/dateTextField"
        android:textColor="@color/colorPrimaryDark"
        android:hint="Date"/>

    <EditText
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:layout_below="@+id/dateTextField"
        android:layout_alignLeft="@+id/dateTextField"
        android:layout_alignStart="@+id/dateTextField"
        android:id="@+id/locationTextField"
        android:textColor="@color/colorPrimaryDark"
        android:hint="Location" />

    <EditText
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:layout_below="@+id/locationTextField"
        android:layout_alignLeft="@+id/locationTextField"
        android:layout_alignStart="@+id/locationTextField"
        android:id="@+id/descriptionTextField"
        android:textColor="@color/colorPrimaryDark"
        android:hint="Description"/>

</RelativeLayout>

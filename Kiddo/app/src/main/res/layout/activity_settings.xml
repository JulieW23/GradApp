<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorAccent"
    tools:context="com.team_05.kiddo.SettingsActivity">

    <TextView
        android:text="Settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/headerHeight"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:id="@+id/settingsTextView"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:fontFamily="@string/textFieldFont"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        android:id="@+id/backImageButton"
        android:backgroundTint="@color/colorPrimary"
        android:layout_alignBottom="@+id/settingsTextView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:tint="@color/colorAccent" />

    <EditText
        android:layout_width="@dimen/textFieldWidth"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/oldPasswordTextField"
        android:textColor="@color/colorPrimaryDark"
        android:hint="Old Password"
        android:fontFamily="@string/textFieldFont"
        android:background="@android:color/transparent"/>

    <EditText
        android:layout_width="@dimen/textFieldWidth"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/oldPasswordTextField"
        android:layout_centerHorizontal="true"
        android:id="@+id/newPasswordTextField"
        android:textColor="@color/colorPrimaryDark"
        android:hint="New Password"
        android:fontFamily="@string/textFieldFont"
        android:background="@android:color/transparent"
        android:layout_marginTop="@dimen/spaceBetweenTextFields"/>

    <EditText
        android:layout_width="@dimen/textFieldWidth"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirmPasswordTextField"
        android:textColor="@color/colorPrimaryDark"
        android:hint="Confirm Password"
        android:layout_below="@+id/newPasswordTextField"
        android:layout_alignLeft="@+id/newPasswordTextField"
        android:layout_alignStart="@+id/newPasswordTextField"
        android:fontFamily="@string/textFieldFont"
        android:background="@android:color/transparent"
        android:layout_marginTop="@dimen/spaceBetweenTextFields"/>

    <EditText
        android:layout_width="@dimen/textFieldWidth"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Pull data (last name)"
        android:ems="10"
        android:layout_above="@+id/oldPasswordTextField"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:id="@+id/lastnameTextField"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@string/textFieldFont"
        android:background="@android:color/transparent"/>

    <EditText
        android:layout_width="@dimen/textFieldWidth"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Pull data (first name)"
        android:ems="10"
        android:layout_above="@+id/lastnameTextField"
        android:layout_centerHorizontal="true"
        android:id="@+id/firstnameTextField"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@string/textFieldFont"
        android:background="@android:color/transparent"
        android:layout_marginBottom="@dimen/spaceBetweenTextFields"/>

    <Button
        android:text="Done"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/marginFromBottom"
        android:id="@+id/doneButton"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"/>

</RelativeLayout>
